$jukebox-width = 640px
$jukebox-height = 360px
$jukebox-margin = 60px
$jukebox-padding = 100px
$border = 1px $gray2 dashed

input
  background: transparent
  color: $gray1
  border: $border
  padding: 0 10px
  &:focus
    outline: 1px $green-light dashed
    outline-offset: -1px

.jukebox-container
  width: 100%
  height: 100%
  min-width: $jukebox-width + (2 * $jukebox-margin)
  min-height: $jukebox-height + (2 * $jukebox-padding)
  background-color: $black
  color: $gray1
  padding: $jukebox-padding 0
  display: flex
  flex-direction: row
  overflow-y: scroll
  position: relative
  &::-webkit-scrollbar
    display: none
  ::-moz-selection
    background: $gray4
    text-shadow: none
  ::selection
    background: $gray4
    text-shadow: none

.jukebox
  flex-grow: 1
  margin: 0 $jukebox-margin
  min-width: $jukebox-width
  display: flex
  flex-direction: column
  align-items: center
  opacity: 0
  transition: opacity 0.3s linear
  &.active
    opacity: 1

#jukebox-slidr
  max-height: $jukebox-height
  display: none
  .slidr-control
    &.up
    &.down
      display: none
    &.left
      left: -50px
    &.right
      right: -50px
  &.video-not-showing .video-player .playlist
    max-height: 0

.playlists
  border: $border
  padding: 20px 0
  width: $jukebox-width
  max-height: $jukebox-height

.playlist-item
  cursor: pointer
  padding: 2px 20px
  &:hover
    background-color: $gray7

.playlist-name
  display: inline-block
  font-weight: 400

.playlist-length
  display: inline-block
  margin-left: 3px

.video-player
  width: $jukebox-width
  padding-bottom: 100px
  border-bottom: 0px transparent solid

.video
  width: $jukebox-width
  height: $jukebox-height
  flex-shrink: 0
  position: relative

.video-none
  border: $border
  width: $jukebox-width
  height: $jukebox-height
  visibility: visible
  opacity: 1
  position: absolute
  top: 0
  left: 0
  text-align: center
  display: flex
  justify-content: center
  align-items: center
  &.hidden
    visibility: hidden
    opacity: 0
    max-height: 0

.overlay
  width: $jukebox-width
  height: $jukebox-height
  background: rgba(34, 34, 34, 0.93);
  position: absolute
  top: 0
  left: 0
  z-index: 1
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  &.hidden
    display: none

.overlay-message
  margin-top: -20px
  margin-bottom: 20px

.overlay-continue
  width: 100px
  height: 100px
  cursor: pointer
  display: flex
  justify-content: center
  position: relative
  align-items: center
  &:hover > span[class^="ion-"]
    opacity: 1
  > span[class^="ion-"]
    opacity: 0.8
    font-size: 70px
    margin-left: 10px

.overlay-loading
  transform: rotateZ(-90deg)
  position: absolute
  left: 0
  top: 0
  circle
    fill: transparent
    stroke-dasharray: 590px
    stroke-dashoffset: 295px
    stroke-width: 5px
    stroke: $green

@keyframes overlay-progress
  from { stroke-dasharray: 295px }
  to { stroke-dasharray: 590px }

.overlay-cancel
  margin-top: 20px
  padding: 2px 10px
  cursor: pointer
  opacity: 0.8
  font-size: 0.8rem
  &:hover
    opacity: 1
    text-decoration: underline

.youtube
  width: $jukebox-width
  height: $jukebox-height
  visibility: visible
  opacity: 1
  position: absolute
  top: 0
  left: 0
  &.hidden
    opacity: 0
    visibility: hidden
    max-height: 0

.controls
  margin-top: 10px
  width: $jukebox-width
  display: flex
  flex-direction: row
  flex-shrink: 0
  justify-content: center;
  font-size: 1.4em
  &.hidden
    display: none
  div[class*="-button"]
    flex-shrink: 0
    padding: 3px 10px
    margin: 0 3px
    cursor: pointer
    opacity: 0.8
    &:hover
      opacity: 1
    &.active
      color: $green
      opacity: 1
      &:hover
        color: $green-light
    &.disabled
      opacity: 0.05

.media-list
  border: $border
  margin-top: 10px
  width: $jukebox-width
  flex-shrink: 0
  &.hidden
    display: none

.action
  color: $green
  cursor: pointer
  font-weight: 400
  &:hover
    color: $green-light

.click
  position: absolute
  top: -30px
  cursor: pointer
  width: 100%
  > div
    display: inline-block
    margin-right: 10px
