$app-full = 1000px
$app-medium = 640px
$app-small = 440px

html
  background-color: $gray1
  color: $black
  font-size: 18px

#app
  height: 100%
  margin: 0 auto
  
.content
  width: 100%
  height: 100%
  overflow-y: scroll
  -webkit-overflow-scrolling: touch
  &::-webkit-scrollbar
    display: none

#bchanx
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  justify-content: center
  align-items: center
  margin-top: -30px

#bchanx-logo
  width: 80px
  height: 80px
  display: inline-block
  margin-right: 20px

.logo-bchanx
  padding-top: 6px

#bchanx-text
  display: inline-block
  font-size: 100px
  line-height: 100px
  font-weight: 400

#projects
  margin-top: 10px
  text-align: center
  font-size: 35px
  line-height: 48px

#social
  font-size: 26px
  margin-top: 25px
  > a
    color: $gray7 !important
    margin: 0 10px


@media screen and (max-width: $app-medium)
  #bchanx-text
    display: none
  
  #bchanx-logo
    display: block
    margin: 0 auto 10px auto

  #projects
    font-size: 26px
    line-height: 38px

  #social
    font-size: 24px
    margin-top: 15px
    > a
      margin: 0 7px
