$min-width = 360px

*
  -webkit-margin-before: 0em
  -webkit-margin-after: 0em
  box-sizing: border-box
  outline-color: $orange-light

html
  font-size: 16px
  font-weight: 300
  font-family: 'Source Sans Pro', Helvetica, arial, sans-serif
  overflow: hidden
  width: 100vw
  height: 100vh

body
  width: 100%
  height: 100%
  min-width: $min-width

a,
a:link,
a:visited,
a:active,
a:focus
  color: $gray3
  font-weight: 400
  text-decoration: none

a:hover
  color: $gray1

::-moz-selection
  background: $orange-lighter
  text-shadow: none

::selection
  background: $orange-lighter
  text-shadow: none

button[disabled]
input[disabled]
  opacity: 0.65
