$app-full = 1000px
$app-medium = 600px
$app-small = 440px

html
  background-color: $gray1
  color: $black
  font-size: 18px

a,
a:link,
a:visited,
a:active
a:focus
  color: $orange
  font-weight: 400
  text-decoration: none

a:hover
  color: $orange-dark

#app
  height: 100%
  margin: 0 auto

.container
  width: 100%
  height: 100%
  min-height: 400px
  display: flex
  flex-direction: row

.content
  position: relative
  padding: 60px 40px
  padding-right: "calc((100vw - %s)/2 + 40px)" % $app-full;
  flex-grow: 1
  text-align: center
  overflow-y: scroll
  -webkit-overflow-scrolling: touch
  background-color: $gray1
  .break.mobile
    display: none

.footer
  line-height: 38px
  font-size: 0.8rem
  a
    font-weight: 300
  .site
    margin-left: 15px

.pickup
  display: inline-block
  padding: 10px 20px
  border-radius: 3px
  border: 2px $gray3 solid
  background-color: $gray2
  .pickup-date
    font-size: 1.2rem
    color: $orange-dark
    margin-top: 5px

.default-image
  width: 250px
  height: 250px

@media screen and (max-width: $app-full)
  #app
    overflow-y: scroll
    -webkit-overflow-scrolling: touch
  .container
    flex-direction: column
  .content
    overflow-y: initial
    padding: 4vw
    .break.mobile
      display: block
  .footer
    line-height: normal

@media screen and (max-width: $app-medium)
  html
    font-size: 16px
  .content
    padding: 20px

