.bold
  font-weight: 400

.note
  font-size: 0.8em
  font-style: italic
  color: $gray7

.break
  width: 2px
  height: 2px
  background-color: $gray4
  opacity: 0.5
  position: relative
  margin: 25px auto
  &:before,
  &:after
    content: ""
    position: absolute
    width: 50px
    height: 2px
    background-color: $gray4
    opacity: 0.3
  &:before
    left: -53px
  &:after
    right: -53px

.loading
  display: inline-block
  color: $orange
  font-size: 2rem
  span
    animation: loading 1s linear infinite
  &.inline
    font-size: 1em
    color: inherit
    margin-left: 10px
  &.large
    line-height: 100px
    font-size: 2.5rem

@keyframes loading {
  0% {
    transform: rotateZ(0)
  }
  100% {
    transform: rotateZ(359deg)
  }
}

.carousel-images
  width: 100%
  height: 100%
  display: inline-block
  position: relative

.carousel-image
  background-size: 100%
  background-repeat: no-repeat
  width: 100%
  height: 100%
  position: absolute
  left: 0
  right: 0
  opacity: 0
  transition: opacity 1s linear
  &.active
    opacity: 1
