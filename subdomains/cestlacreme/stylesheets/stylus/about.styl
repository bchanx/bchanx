.about-me-picture
  width: 200px
  height: 200px
  border-radius: 50%
  margin: 25px auto
  background-image: url('/cestlacreme/images/about-me-min.jpg')
  background-size: 100%
  background-repeat: no-repeat
  background-position: 0 0
  filter: brightness(1.1) contrast(1.1) hue-rotate(-3deg)

.faq-title
  padding-bottom: 10px

$qa-timing = 0.3s

.qa
  margin-top: 5px
  padding-bottom: 0
  &.expanded
    margin-top: 3px
    padding-bottom: 10px
    .question
      background-color: $gray2
      padding: 11px 10px
      border-top-left-radius: 3px
      border-top-right-radius: 3px
      animation: question-expanded $qa-timing
    .answer
      padding: 10px 20px
      border: 2px $gray2 solid
      border-bottom-left-radius: 3px
      border-bottom-right-radius: 3px
      border-top: none
      max-height: 1000px
      opacity: 1
      animation: answer-expanded $qa-timing
  &.collapsed
    animation: qa-collapsed $qa-timing
    .question
      animation: question-collapsed $qa-timing
    .answer
      animation: answer-collapsed $qa-timing

@keyframes qa-collapsed {
  0% {
    margin-top: 3px
    padding-bottom: 10px
  }
  99% {
    margin-top: 3px
    padding-bottom: 10px
  }
  100% {
    margin-top: 5px
    padding-bottom: 0
  }
}

.question
  color: $orange
  padding: 9px 10px
  cursor: pointer
  background-color: initial
  &:hover
    text-decoration: underline

@keyframes question-expanded {
  0% {
    background-color: initial
    padding: 11px 10px
  }
  100% {
    background-color: $gray2
    padding: 11px 10px
  }
}

@keyframes question-collapsed {
  0% {
    background-color: $gray2
    padding: 11px 10px
  }
  99% {
    padding: 11px 10px
  }
  100% {
    background-color: initial
    padding: 9px 10px
  }
}

.answer
  overflow: hidden
  max-height: 0
  font-size: 0.8rem
  padding: 0
  max-height: 0
  opacity: 0
  border: none

@keyframes answer-expanded {
  0% {
    opacity: 0
    max-height: 0
  }
  100% {
    max-height: 1000px
  }
}

@keyframes answer-collapsed {
  0% {
    opacity: 1
    padding: 10px 20px
    max-height: 1000px
    border: 2px $gray2 solid
    border-top: none
  }
  99% {
    padding: 10px 20px
    border: 2px $gray2 solid
    border-top: none
  }
  100% {
    border: none
    padding: 0
    opacity: 0
    max-height: 0
  }
}
