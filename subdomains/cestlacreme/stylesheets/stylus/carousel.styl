.carousel-images
  width: 100%
  height: 100%
  display: inline-block
  position: relative

.carousel-image
  background-size: 100%
  background-repeat: no-repeat
  width: 100%
  height: 100%
  position: absolute
  left: 0
  right: 0
  opacity: 0
  transition: opacity 1s linear
  pointer-events: none
  &.active
    opacity: 1
    pointer-events: auto
